<h1>New book</h1>

<%= form_with model: @book,url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :opinion %>

  <%= f.submit'Create Book'%>

<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% if @books %>
     <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.opinion %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に消しますか?' } %></td>
      </tr>
    <% end %>
  <% else %>
  <p>No books found.</p>
    <% end %>
  </tbody>
</table>