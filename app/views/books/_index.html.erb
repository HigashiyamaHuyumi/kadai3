<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<tbody>

     <% @books.each do |book| %>
      <tr>
        <td><% if book.user.profile_image.attached? %>
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.profile_image %>
          <% end %>
        <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>