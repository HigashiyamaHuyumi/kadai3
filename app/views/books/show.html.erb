<%= render 'users/user_page' %>

<%= render 'books/new_book' %>

<h1>Book detail</h1>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.opinion %></td>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
      <td>
        <%= form_with(model: @book, url:  book_path, method: :destroy, data: { confirm: '本当に消しますか?' } ) do |f| %>
          <%= f.submit "Destroy", class: "btn btn-success3" %>
        <% end %>
      </td>
    </tr>
  </tbody>

</table>