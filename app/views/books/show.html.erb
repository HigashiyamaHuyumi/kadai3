
<div class="row">

  <div class="col-md-4">
    <%= render 'users/user_page', user: @user %>
  </div>
  
<div class="col-md-8">

  <h1>Book detail</h1>
  
  <table class = "table table-striped">
  
    <tbody>
      <tr>
        <td>
          <% if @book.present? && @user.present? %>
            <% if @user.profile_image.attached? %>
              <%= image_tag @book.user.profile_image.variant(resize: "100x100") %>
            <% else %>
              <%= image_tag "no_image.jpg", width: 100, height: 100 %>
            <% end %>
            <br><%= link_to @book.user.name , user_path(@user) %>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <% if user_signed_in? && current_user == @book.user %>
          <td>
            <%= link_to edit_book_path(@book), class: "btn btn-success" do %>
              Edit
            <% end %>
          </td>
          <td>
            <%= form_with(model: @book, url: book_path(@book), method: :delete, data: { confirm: '本当に消しますか?' } ) do |f| %>
              <%= f.submit "Destroy", class: "btn btn-danger" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  
  </table>
  
</div>


