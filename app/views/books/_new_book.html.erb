<div class="text-left">
  <h1>New book</h1>

  <%= render 'books/book_errors' ,book: @book %> <!-- エラーチェック -->
  
  <%= form_with model: book, url: books_path, method: :post do |f| %>
  
    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  
    <br><%= f.submit'Create Book', class: "btn btn-success" %>
  
  <% end %>
  
</div>