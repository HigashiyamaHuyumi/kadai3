<%= render 'users/user_page' %>
<%= render 'books/new_book' %>

<h1>Books</h1>

<table>
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image.variant(resize: "100x100") %>
          <% else %>
            <%= image_tag "app/assets/images/no_image.jpg", width: 100, height: 100 %>
          <% end %>
        </td>
        <td><strong><%= book.title %></strong> by <%= book.user.name %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>