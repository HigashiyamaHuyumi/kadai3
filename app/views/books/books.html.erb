<%= render 'users/user_page', user: @user %>
<%= render 'books/new_book', book: @new_book %>

<h1>Books</h1>

<table class = "table table-striped">
  
  <thead>
    <tr>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize: "100x100") %>
          <% else %>
            <%= image_tag "app/assets/images/no_image.jpg", width: 100, height: 100 %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>