<!-- ユーザ一覧 -->
<div class="row">

  <div class="col-md-4">
    <%= render 'users/user_page', user: @current_user ,book: @new_book  %>
  </div>

  <div class="col-md-8">
    <h1>Users</h1>

    <table class = "table table-striped">

      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image.variant(resize: "100x100") %>
              <% else %>
                <%= image_tag "no_image.jpg", width: 100, height: 100 %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>