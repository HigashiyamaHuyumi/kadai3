<h1>User info</h1>

<div>
  <% if user.present? && user.profile_image.attached? %>
    <%= image_tag user.profile_image.variant(resize: "100x100") %>
  <% else %>
    <%= image_tag "no_image.jpg", width: 100, height: 100 %>
  <% end %>
</div>

<table class = "table table-striped">
  <tbody>
    <% if user.present? %>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if current_user == user %><!-- ユーザが一致の時編集ページ、違うとき自分のページに移動する　-->
  <%= link_to edit_user_path(user), class: "btn btn-light btn-outline-dark" do %>
    <i class="fas fa-user-gear"></i>
  <% end %>
<% else %>
  <%= link_to user_path(current_user), class: "btn btn-light btn-outline-dark" do %>
    <i class="fas fa-user-gear"></i>
  <% end %>
<% end %>

<div class="row">
  <%= render 'books/new_book',book: @new_book %>
</div>