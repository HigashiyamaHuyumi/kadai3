<h1>User info</h1>

<div>
  <% if user.present? && user.profile_image.attached? %>
    <%= image_tag user.profile_image.variant(resize: "100x100") %>
  <% else %>
    <%= image_tag "no_image.jpg", width: 100, height: 100 %>
  <% end %>
</div>

<table class = "table table-striped">
  <tbody>
    <% if user.present? %>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if current_user == user %><!-- ユーザが一致の時編集ページ、違うとき自分のページに移動する　-->
  <%= link_to edit_user_path(user), class: "btn btn-light btn-outline-dark" do %>
    <i class="fas fa-user-gear"></i>
  <% end %>
<% else %>
  <%= link_to user_path(current_user), class: "btn btn-light btn-outline-dark" do %>
    <i class="fas fa-user-gear"></i>
  <% end %>
<% end %>

<!-- 新規投稿 -->
<div class="row">
  <div class="text-left">
    <h2>New book</h2>

    <!-- エラーチェック -->
    <% if book.errors.any? %>
      <%= book.errors.count %> errors prohibited this obj from being saved:
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <%= form_with model: Book.new, url: books_path, method: :post do |f| %>

      <label>Title</label>
      <br>
      <%= f.text_field :title %>
      <br>
      <label>Opinion</label>
      <br>
      <%= f.text_area :body %>
      <br>
      <%= f.submit'Create Book', class: "btn btn-success" %>

    <% end %>

  </div>
</div>